from bs4 import BeautifulSoup
from requests import get


heart_of_darkness = get('https://www.gutenberg.org/files/219/219-0.txt')
heart_of_darkness_parsed = BeautifulSoup(heart_of_darkness.text, 'html.parser')

frankenstein = get('https://www.gutenberg.org/files/84/84-0.txt')
frankenstein_parsed = BeautifulSoup(frankenstein.text, 'html.parser')

ulysses = get('https://www.gutenberg.org/files/4300/4300-0.txt')
ulysses_parsed = BeautifulSoup(ulysses.text, 'html.parser')

ulysses_string = str(ulysses_parsed)
heart_of_darkness_string = str(heart_of_darkness_parsed)
frankenstein_string = str(frankenstein_parsed)


novel_string = ''.join([heart_of_darkness_string, ulysses_string, frankenstein_string])
novel_string = novel_string.encode('utf-8')

with open('frankenstein_ulysses_hrtofdarkness.txt', 'wb') as f:
    f.write(novel_string)

